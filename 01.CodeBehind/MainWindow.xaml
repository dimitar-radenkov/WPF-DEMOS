<Window x:Class="_01.CodeBehind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Background="LightGray"
        Width="300" Height="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontWeight="Bold">Click on the button to increment the counter</TextBlock>

        <TextBlock Name="TextCounter" Width="80" Height="20" Grid.Column="0" Grid.Row="1"></TextBlock>
        <Button Grid.Column="1" Grid.Row="1" Width="80" Height="20" 
                Name="ButtonIncrement" Click="ButtonIncrement_Click">Increment</Button>

    </Grid>
</Window>
